# -----------------------
# App
# -----------------------
NODE_ENV=development
PORT=3000

# -----------------------
# Database
# -----------------------
MONGODB_URI=mongodb://localhost:27017/project_name

# -----------------------
# JWT
# -----------------------
TOKEN_KEY=replace-with-strong-secret

# -----------------------
# Password encryption (secure_password.util.ts)
# Example values shown; ensure they match your crypto setup.
# -----------------------
ALGORITHM=aes-256-cbc
INITVECTOR=0000000000000000          # 16 chars for AES-256-CBC IV if used as string
SECURITYKEY=32-characters-secret-key # 32 chars for AES-256 key length

# -----------------------
# AWS / S3 (bucket.config.ts / bucket.util.ts)
# -----------------------
REGION=us-east-1
ACCESSKEYID=YOUR_AWS_ACCESS_KEY_ID
SECRETACCESSKEY=YOUR_AWS_SECRET_ACCESS_KEY
BUCKET_NAME=your-s3-bucket-name
BUCKET_ENV=dev/                       # prefix used in S3 keys, e.g. dev/ or prod/
BUCKET_URL=https://your-bucket.s3.amazonaws.com/  # include trailing slash

# -----------------------
# Mail (mailer.util.ts)
# -----------------------
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_FROM_ADDRESS=no-reply@yourdomain.com
MAIL_PASSWORD=your-smtp-password
SUPPORT_MAIL=support@yourdomain.com
APP_LOGO=https://your-cdn.com/assets/logo.png

# -----------------------
# Stripe (user.service.ts)
# -----------------------
STRIPE_SECRET_KEY=sk_live_or_test_key

# -----------------------
# Firebase/FCM (notification.service.ts)
# The service account file is read relative to project root
# -----------------------
PROJECT_ID=your-gcp-project-id
FIREBASE_SA_PATH=config/firebase-service-account.json